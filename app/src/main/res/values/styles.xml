<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/caveat</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textSize">17sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/textColorPrimary</item>
        <item name="colorControlActivated">@color/dark_gray</item>
        <item name="android:fontFamily">@font/caveat</item>
    </style>

    <style name="activityMainTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textColorHint">@color/app_text_color</item>
    </style>


</resources>
